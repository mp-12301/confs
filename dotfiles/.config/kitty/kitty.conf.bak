# editor  /usr/local/bin/nvim
font_family Victor Mono
italic_font VictorMono-Oblique
bold_italic_font VictorMono-BoldOblique

# Crazy Fun Cursor Trail
# cursor_trail 10
# cursor_trail_start_threshold 50

font_size 14.0
adjust_line_height 100%

tab_bar_margin_height 0.0 0.0
tab_bar_margin_width 0.0
tab_bar_edge top
tab_bar_min_tabs 1
tab_title_template              "ðŸ¦¥ {sup.index} {title}"
active_tab_title_template              "{fmt.fg.orange}î®§  {fmt.fg.tab}{title}"
tab_powerline_style slanted
tab_bar_style powerline
# active_tab_background #eee

hide_window_decorations yes
cursor_shape block
# macos_titlebar_color background
macos_show_window_title_in menubar
strip_trailing_spaces smart
copy_on_select true
resize_in_steps no
remember_window_size yes

# macos_option_as_alt left
open_url_with default
underline_hyperlinks always
undercurl_style thin-dense

map cmd+alt+right next_tab
map cmd+alt+left previous_tab

modify_font underline_position 9
# modify_font underline_thickness 300%
modify_font strikethrough_position 2px

# macos_colorspace displayp3

# Swap tabs by number
map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6
map cmd+6 goto_tab 6
map cmd+7 goto_tab 7

mouse_hide_wait -1

# vim:ft=kitty

# BEGIN_KITTY_THEME
# graphite
include current-theme.conf
# END_KITTY_THEME
